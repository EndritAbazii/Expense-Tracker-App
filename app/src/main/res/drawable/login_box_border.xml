<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White fill for the box -->
    <solid android:color="@android:color/white"/>

    <!-- Blue stroke for the border -->
    <stroke
        android:width="2dp"
        android:color="#1565C0" />

    <corners android:radius="4dp" />

    <!-- Optional padding inside the shape -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
